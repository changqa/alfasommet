page{
  height:100%;
  width:100%
}


.mask{
width:100%;
height:100%;
position:fixed;
background-color:rgb(9, 48, 87);
z-index:-1;
top:0;
left:0;
opacity:1;
}


.bg{
position:fixed;
top:0;
left:0;
width:100%;
height:100%;
background:url("https://i.loli.net/2019/03/10/5c84d91ad50d4.jpg") 
no-repeat #000;
background-size:cover;
z-index:-1;
}

.bg-img{
width : 100%;
height : 100%;
}


.login-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bg-box{
  height: 100%;
  width:100%;
}

.bg-box image{
  opacity: 0.2;
  height: 100%;
  width:100%;
}

.item{
    position: fixed;
    margin-top: 15%;
    flex-grow:1;
    height: 52%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 80%;
    padding: 0 2%;
}

.login-item{
  width: 90%;
  border-bottom: 2px solid #fff;
  flex-grow:1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
  color: white;
}

.btn{
  flex-grow:1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.btn button{
  color: white;
  border:0;
  font-family: Montserrat
}

.login-btn button{
  font-size: 60rpx;
}

.signup-btn button{
  margin-top:20%; 
  font-size: 42rpx;
}

.ph{
  color: rgb(216, 216, 216);
  font-family: Montserrat
}